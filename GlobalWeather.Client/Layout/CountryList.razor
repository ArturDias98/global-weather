@using GlobalWeather.Shared.Models.Countries

<MudList T="CountryModel">
    @foreach (var countryModel in Countries)
    {
        <MudListItem T="CountryModel"
                     OnClick="@(() => OnClick(countryModel))">
            <AvatarContent>
                <MudImage Src="@GetCountryImage(countryModel)"
                          Class="rounded-lg"
                          Height="100"
                          Width="100"
                          ObjectFit="ObjectFit.Cover">
                </MudImage>
            </AvatarContent>
            <ChildContent>
                <MudStack Class="ml-5">
                    <MudText Typo="Typo.h6">@countryModel.Name.CommonName (@countryModel.Name.Official)</MudText>
                    <MudStack Row="true"
                              Wrap="Wrap.Wrap">
                        <MudChip T="string"
                                 Variant="Variant.Text"
                                 Color="Color.Info">
                            @countryModel.Region
                        </MudChip>
                        <MudChip T="string"
                                 Variant="Variant.Text">
                            Capital: @countryModel.Capital.FirstOrDefault()
                        </MudChip>
                        <MudChip T="string"
                                 Variant="Variant.Text">
                            População: @countryModel.Population
                        </MudChip>
                    </MudStack>
                </MudStack>
            </ChildContent>
        </MudListItem>
    }
</MudList>