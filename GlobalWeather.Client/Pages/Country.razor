@page "/country"
@using GlobalWeather.Shared.Models.Countries

<PageTitle>country</PageTitle>

<MudText Typo="Typo.h4"
         Class="mt-10 mb-5">
    Países
</MudText>

<MudTextField T="string"
              Value="_region"
              Placeholder="Região"
              HelperText="Busque por regiões (inglês): Asia, Europe, North America, ..."
              Variant="Variant.Outlined"
              ValueChanged="OnLoadAsync"
              AdornmentIcon="@Icons.Material.Outlined.Search"
              Adornment="Adornment.End">
</MudTextField>

@if (_loading)
{
    <MudProgressLinear Size="Size.Medium"
                       Indeterminate="true"
                       Class="mt-10">
    </MudProgressLinear>
}
else
{
    @if (_countries.Count != 0)
    {
        //Exibir: Nome (Common e official), Capital, Languages, Region, Coordinates, Flags, Population
        <CountryList Countries="_countries"></CountryList>
    }
}